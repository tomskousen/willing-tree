# The Willing Tree - Environment Configuration

# Development/Production Mode
VITE_NODE_ENV=production
VITE_APP_URL=https://your-domain.com

# Email Service (Resend.com - Recommended)
VITE_RESEND_API_KEY=your_resend_api_key_here
VITE_FROM_EMAIL=hello@your-domain.com

# Database (Supabase - Recommended for user matching)
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# Analytics (Optional - Vercel Analytics is free)
VITE_ANALYTICS_ID=your_analytics_id

# Stripe for Payments (Already configured)
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key

# Feature Flags
VITE_ENABLE_EMAIL=true
VITE_ENABLE_USER_MATCHING=true
VITE_ENABLE_ANALYTICS=true